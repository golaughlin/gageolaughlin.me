---
import NavLink from "./NavLink.astro";
import ThemeIcon from "./ThemeIcon.astro";
import Logo from "../assets/logo.svg";
---

<header
  class="bg-gradient-to-b from-slate-100 to-slate-200 border-b border-slate-200 shadow-xs shadow-slate-400 w-full sticky
        dark:from-slate-800 dark:to-slate-900 dark:border-slate-950 dark:shadow-slate-950"
>
  <div class="max-w-4xl mx-auto flex justify-between items-center p-4">
    <div class="flex justify-start items-center space-x-2">
      <Logo class="h-8 text-slate-900 dark:text-slate-100" />
      <span
        class="flex-auto text-lg text-slate-900 font-display font-medium dark:text-slate-100"
        >Gage O'Laughlin</span
      >
    </div>
    <nav class="hidden md:block">
      <ul class="flex flex-auto justify-center items-center">
        <NavLink title="Skills" url="#skills" />
        <NavLink title="Experience" url="#experience" />
        <NavLink title="Awards" url="#awards" />
        <NavLink title="Education" url="#education" />
      </ul>
    </nav>
    <div class="flex justify-end items-center">
      <ThemeIcon />
    </div>
  </div>
</header>
